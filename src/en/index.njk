---
layout: layouts/base.njk
pagination:
  data: collections.cases_en
  size: 20
  alias: cases
  reverse: false
permalink: "/en/{% if pagination.pageNumber == 0 %}index.html{% else %}page/{{ pagination.pageNumber + 1 }}/index.html{% endif %}"
lang: en
---
{% set currentLang = page.lang or 'en' %}
{% set sectionLabel = 'cases.section' | t(currentLang) %}
{% from "components/card.njk" import caseCard %}
{% from "components/pagination.njk" import render as renderPagination %}

<section class="case-list container" aria-label="{{ sectionLabel }}">
  {% if cases and cases | length %}
    <div class="case-grid">
      {% for item in cases %}
        {{ caseCard(item, currentLang) | safe }}
      {% endfor %}
    </div>
  {% else %}
    <p class="empty-state">{{ 'empty' | t(currentLang) }}</p>
  {% endif %}

  {{ renderPagination(pagination, currentLang) | safe }}
</section>
