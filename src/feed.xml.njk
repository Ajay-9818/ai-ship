---
permalink: /feed.xml
layout: null
eleventyExcludeFromCollections: true
---
{% set defaultLang = site.defaultLang or 'zh' %}
{% set siteLangData = site.languages[defaultLang] or site.languages.zh %}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ siteLangData.title }}</title>
    <link>{{ site.url }}/</link>
    <description>{{ siteLangData.description }}</description>
    <language>{{ siteLangData.locale or 'zh-CN' }}</language>
    <lastBuildDate>{{ buildTime | readableDate('en-US') }}</lastBuildDate>
    {% for item in collections.cases %}
    <item>
      <title>{{ item.data.title }}</title>
      <link>{{ site.url }}{{ item.url }}</link>
      <guid>{{ site.url }}{{ item.url }}</guid>
      <pubDate>{{ item.date | readableDate('en-US') }}</pubDate>
      <description><![CDATA[{{ item.templateContent | safe }}]]></description>
    </item>
    {% endfor %}
  </channel>
</rss>
